# $Id$
#

if [ $# -lt 4 ]; then
	echo "Usage $0 volume_file surface_file output_surface_file [threshold] [curv] [max_search_distance]"
	exit
fi

if [ $# -eq 4 ]; then
    th=$4
else
    th=0.5
fi

if [ $# -eq 5 ]; then
    curv=$5
else
    curv=0.05
fi

if [ $# -eq 6 ]; then
    dist=$6
else
    dist=5
fi

iters=150
model="-1 0.1 avg -0.01 0.01"
step="0.2 0.1 $dist 0 $th $th n 0 0 0"
CAT_DeformSurf $1 none 0 0 0 $2 $3 none 0 1 $model $step $iters 0.01 0.0

iters=50
model="-1 0.1 avg -${curv} ${curv}"
step="0.1 0.1 $dist 0 $th $th n 0 0 0"
CAT_DeformSurf $1 none 0 0 0 $3 $3 none 0 1 $model $step $iters 0.01 0.0